<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ctrlaltquest.ui.controllers.ForgotPasswordController"
            stylesheets="/styles/auth.css" prefWidth="960" prefHeight="540">
    <center>
        <VBox alignment="CENTER" spacing="16" styleClass="auth-card">
            <Label text="Recupera tu pergamino" styleClass="auth-title" />
            <TextField fx:id="emailField" promptText="Correo" />
            <Button text="Enviar enlace" onAction="#handleRecover" styleClass="primary-button" />
            <Button text="Volver" onAction="#handleBackToLogin" styleClass="ghost-button" />
        </VBox>
    </center>
</BorderPane>

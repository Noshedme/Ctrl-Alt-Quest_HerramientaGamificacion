<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.ctrlaltquest.ui.controllers.views.ActivityViewController"
      spacing="25" styleClass="view-container" stylesheets="@/styles/home.css">

    <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

    <HBox spacing="25" alignment="CENTER_LEFT" styleClass="activity-card" style="-fx-padding: 20; -fx-background-color: rgba(20, 15, 35, 0.9);">
        <effect><DropShadow color="rgba(0,0,0,0.5)" radius="15"/></effect>
        
        <StackPane>
            <Circle fx:id="radarPulse" radius="25" fill="TRANSPARENT" stroke="#4ade80" strokeWidth="2" opacity="0.0"/>
            <Circle fx:id="statusIndicator" radius="8" fill="#555" stroke="WHITE" strokeWidth="2"/>
        </StackPane>

        <VBox spacing="5">
            <Label text="SISTEMA DE RASTREO" styleClass="section-title-small" style="-fx-text-fill: #f7d27a;"/>
            <Label fx:id="lblMonitorStatus" text="ESPERANDO ORDEN..." styleClass="text-tiny-bright" style="-fx-font-family: 'Consolas';"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <ToggleButton fx:id="btnToggleMonitor" text="INICIAR SECUENCIA" onAction="#handleToggleMonitor" styleClass="btn-action-primary" style="-fx-font-family: 'Consolas'; -fx-font-weight: bold;"/>
        <Button fx:id="btnCaptureActivity" text="ðŸ“¸ CAPTURAR ACTIVIDAD" styleClass="btn-action-secondary" style="-fx-font-family: 'Consolas'; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-color: #4ade80; -fx-text-fill: #1a1a1a;" onAction="#handleCaptureActivity"/>
    </HBox>

    <HBox spacing="25" VBox.vgrow="ALWAYS">
        
        <VBox spacing="20" prefWidth="380">
            <VBox spacing="15" styleClass="activity-card" style="-fx-padding: 25;">
                <Label text="OBJETIVO ACTUAL" styleClass="card-category-runic" style="-fx-font-size: 16px;"/>
                
                <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: rgba(0,0,0,0.4); -fx-background-radius: 12; -fx-padding: 20; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 12;">
                    <Label fx:id="lblCurrentWindow" text="---" styleClass="text-app-name" wrapText="true" textAlignment="CENTER" style="-fx-font-size: 18px;"/>
                    <Label fx:id="lblProductivity" text="ANALIZANDO" styleClass="status-tag"/>
                </VBox>

                <Separator styleClass="menu-separator"/>
                
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    
                    <VBox alignment="CENTER" GridPane.columnIndex="0">
                        <Label text="TIEMPO SESIÃ“N" styleClass="text-tiny"/>
                        <Label fx:id="lblSessionTime" text="00:00:00" styleClass="text-lvl-value" style="-fx-font-family: 'Consolas';"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" GridPane.columnIndex="1">
                        <Label text="XP GENERADA" styleClass="text-tiny"/>
                        <Label fx:id="lblSessionXP" text="+0 XP" styleClass="text-value-gold"/>
                    </VBox>
                </GridPane>
            </VBox>
            
            <VBox styleClass="activity-card" style="-fx-padding: 15; -fx-opacity: 0.7;">
                <Label text="INTENSIDAD DE SEÃ‘AL" styleClass="text-tiny"/>
                <ProgressBar fx:id="signalBar" progress="0.0" maxWidth="Infinity" style="-fx-accent: #4ade80; -fx-control-inner-background: rgba(0,0,0,0.5);"/>
            </VBox>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="activity-card" style="-fx-padding: 0;">
            <HBox style="-fx-padding: 15 20; -fx-background-color: rgba(255,255,255,0.02); -fx-border-color: transparent transparent rgba(255,255,255,0.05) transparent; -fx-border-width: 0 0 1 0;">
                <Label text="REGISTRO DE EVENTOS" styleClass="section-title-small"/>
            </HBox>
            
            <TableView fx:id="tableLog" VBox.vgrow="ALWAYS" styleClass="custom-table" style="-fx-background-color: transparent;">
                <placeholder><Label text="Esperando datos del sistema..." style="-fx-text-fill: #666;"/></placeholder>
                <columns>
                    <TableColumn fx:id="colTime" text="TIMESTAMP" prefWidth="120" style="-fx-alignment: CENTER-LEFT;"/>
                    <TableColumn fx:id="colApp" text="PROCESO / VENTANA" prefWidth="300"/>
                    <TableColumn fx:id="colStatus" text="CLASIFICACIÃ“N" prefWidth="150" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colDuration" text="DURACIÃ“N" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</VBox>
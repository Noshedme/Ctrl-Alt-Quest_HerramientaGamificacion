<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.ctrlaltquest.ui.controllers.views.AchievementsViewController"
      spacing="25" styleClass="view-container" stylesheets="@/styles/home.css"
      style="-fx-background-color: transparent;">

    <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="30">
        <VBox spacing="5">
            <Label text="SALA DE TROFEOS" styleClass="section-title" style="-fx-font-size: 28px; -fx-text-fill: #f7d27a;">
                <effect><Glow level="0.6"/></effect>
            </Label>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Line endX="50" style="-fx-stroke: #f7d27a; -fx-stroke-width: 2;"/>
                <Label text="Registro de hitos legendarios" styleClass="text-tiny-bright" style="-fx-opacity: 0.7;"/>
            </HBox>
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="20" styleClass="activity-card" alignment="CENTER_LEFT" 
              style="-fx-padding: 15 25; -fx-background-color: rgba(20, 15, 35, 0.9); -fx-background-radius: 12; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 12;">
            <effect><DropShadow color="rgba(0,0,0,0.5)" radius="10"/></effect>
            
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label text="PROGRESO TOTAL" styleClass="text-tiny" style="-fx-text-fill: #aaa;"/>
                <ProgressBar fx:id="barCompletion" progress="0.0" prefWidth="150" prefHeight="8" 
                             style="-fx-accent: #4ade80; -fx-control-inner-background: rgba(0,0,0,0.5);"/>
            </VBox>
            
            <Separator orientation="VERTICAL"/>
            
            <VBox alignment="CENTER">
                <Label fx:id="lblCompletionPct" text="0%" styleClass="text-value-gold" style="-fx-font-size: 20px; -fx-text-fill: #4ade80;"/>
                <Label fx:id="lblTotalUnlocked" text="0/0" styleClass="text-tiny"/>
            </VBox>
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="transparent-scroll" VBox.vgrow="ALWAYS" 
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <content>
            <VBox spacing="30" style="-fx-background-color: transparent; -fx-padding: 0 10 0 0;">
                
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 5 0; -fx-border-color: transparent transparent rgba(255,255,255,0.1) transparent; -fx-border-width: 0 0 1 0;">
                        <Label text="ðŸ†" style="-fx-font-size: 16px;"/>
                        <Label text="LOGROS GENERALES" styleClass="section-title-small" style="-fx-text-fill: #f7d27a;"/>
                    </HBox>
                    <VBox fx:id="listGeneral" spacing="10"/>
                </VBox>

                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 5 0; -fx-border-color: transparent transparent rgba(163, 53, 238, 0.3) transparent; -fx-border-width: 0 0 1 0;">
                        <Label text="ðŸ”®" style="-fx-font-size: 16px;"/>
                        <Label text="SECRETOS DEL SISTEMA" styleClass="section-title-small" style="-fx-text-fill: #a335ee;"/>
                    </HBox>
                    <VBox fx:id="listSecrets" spacing="10"/>
                </VBox>
                
            </VBox>
        </content>
    </ScrollPane>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.ctrlaltquest.ui.controllers.views.ActivityViewController"
      spacing="20" styleClass="view-container" 
      stylesheets="@/styles/home.css"
      style="-fx-background-color: transparent;">

    <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

    <HBox spacing="25" alignment="CENTER_LEFT" 
          style="-fx-padding: 20; -fx-background-color: rgba(10, 10, 15, 0.85); -fx-background-radius: 12; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 12;">
        
        <effect><DropShadow color="rgba(0,0,0,0.5)" radius="20"/></effect>
        
        <StackPane>
            <Circle fx:id="radarPulse" radius="22" fill="TRANSPARENT" stroke="#4ade80" strokeWidth="1" opacity="0.0"/>
            <Circle fx:id="statusIndicator" radius="6" fill="#555" stroke="WHITE" strokeWidth="1"/>
        </StackPane>

        <VBox spacing="4">
            <Label text="MONITOR DE ACTIVIDAD" styleClass="section-title-small" style="-fx-text-fill: #f7d27a; -fx-font-weight: bold;"/>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="ESTADO:" styleClass="text-tiny" style="-fx-text-fill: #888;"/>
                <Label fx:id="lblMonitorStatus" text="OFFLINE" styleClass="text-tiny-bright" style="-fx-font-family: 'Consolas';"/>
            </HBox>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox spacing="15">
            <Button fx:id="btnCaptureActivity" text="[ O ] CAPTURA SNAPSHOT" 
                    styleClass="btn-nav" 
                    style="-fx-font-family: 'Consolas'; -fx-font-size: 11px; -fx-background-color: rgba(255,255,255,0.05);"/>
            
            <ToggleButton fx:id="btnToggleMonitor" text="▶ INICIAR RASTREO" onAction="#handleToggleMonitor" 
                          styleClass="btn-nav"
                          style="-fx-font-family: 'Consolas'; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
    </HBox>

    <HBox spacing="25" VBox.vgrow="ALWAYS">
        
        <VBox spacing="20" prefWidth="380">
            
            <VBox spacing="0" styleClass="activity-card" style="-fx-padding: 0; -fx-border-color: rgba(255,255,255,0.1); -fx-border-width: 1;">
                <HBox style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 8 15;">
                    <Label text="OBJETIVO EN FOCO" styleClass="text-tiny" style="-fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Rectangle fx:id="decorationLine" width="40" height="2" fill="#4ade80"/>
                </HBox>
                
                <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS" style="-fx-padding: 30;">
                    <Label fx:id="lblCurrentWindow" text="---" 
                           styleClass="text-app-name" wrapText="true" textAlignment="CENTER" 
                           style="-fx-font-size: 16px; -fx-font-family: 'Consolas'; -fx-text-fill: white;"/>
                    
                    <Label fx:id="lblProductivity" text="OFFLINE" 
                           style="-fx-padding: 5 15; -fx-background-color: #333; -fx-text-fill: #aaa; -fx-background-radius: 4; -fx-font-size: 10px; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                
                <VBox alignment="CENTER" GridPane.columnIndex="0" spacing="5" 
                      style="-fx-background-color: rgba(255,255,255,0.03); -fx-padding: 15; -fx-background-radius: 8;">
                    <Label text="TIEMPO SESIÓN" styleClass="text-tiny" style="-fx-text-fill: #888;"/>
                    <Label fx:id="lblSessionTime" text="00:00:00" style="-fx-font-size: 20px; -fx-font-family: 'Consolas'; -fx-text-fill: white;"/>
                </VBox>
                
                <VBox alignment="CENTER" GridPane.columnIndex="1" spacing="5"
                      style="-fx-background-color: rgba(255,255,255,0.03); -fx-padding: 15; -fx-background-radius: 8;">
                    <Label text="XP GENERADA" styleClass="text-tiny" style="-fx-text-fill: #888;"/>
                    <Label fx:id="lblSessionXP" text="+0 XP" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ffd700;">
                        <effect><Glow level="0.5"/></effect>
                    </Label>
                </VBox>
            </GridPane>
            
            <VBox style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 8;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="CPU / NET" styleClass="text-tiny" style="-fx-font-family: 'Consolas';"/>
                    <ProgressBar fx:id="signalBar" progress="0.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" 
                                 style="-fx-accent: #4ade80; -fx-control-inner-background: rgba(0,0,0,0.8); -fx-pref-height: 6;"/>
                </HBox>
            </VBox>
        </VBox>

        <VBox spacing="0" HBox.hgrow="ALWAYS" 
              style="-fx-background-color: rgba(10, 12, 16, 0.9); -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 8; -fx-background-radius: 8;">
            
            <HBox style="-fx-padding: 12 20; -fx-border-color: transparent transparent rgba(255,255,255,0.05) transparent; -fx-border-width: 0 0 1 0;">
                <Label text=">_ SYSTEM LOG" styleClass="text-tiny" style="-fx-font-family: 'Consolas'; -fx-text-fill: #4ade80;"/>
            </HBox>
            
            <TableView fx:id="tableLog" VBox.vgrow="ALWAYS" 
                       style="-fx-background-color: transparent; -fx-font-family: 'Consolas'; -fx-font-size: 11px;">
                <placeholder>
                    <Label text="Esperando flujo de datos..." style="-fx-text-fill: #444; -fx-font-family: 'Consolas';"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="colTime" text="TIME" prefWidth="90" style="-fx-alignment: CENTER-LEFT; -fx-text-fill: #888;"/>
                    <TableColumn fx:id="colApp" text="PROCESO DETECTADO" prefWidth="280" style="-fx-text-fill: #ddd;"/>
                    <TableColumn fx:id="colStatus" text="STATUS" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colDuration" text="INFO" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #888;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</VBox>
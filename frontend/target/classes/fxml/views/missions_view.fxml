<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.effect.Glow?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.ctrlaltquest.ui.controllers.views.MissionsViewController"
      spacing="25" styleClass="view-container" stylesheets="@/styles/home.css">

    <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5">
            <Label text="CRÃ“NICAS &amp; ENCARGOS" styleClass="section-title" style="-fx-font-size: 28px;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Line endX="50" style="-fx-stroke: #f7d27a; -fx-stroke-width: 2;"/>
                <Label text="Completa objetivos para obtener gloria y fortuna" styleClass="text-tiny-bright"/>
            </HBox>
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <VBox alignment="CENTER_RIGHT" style="-fx-opacity: 0.7;">
            <Label text="OBJETIVOS ACTIVOS" styleClass="text-tiny"/>
            <Label fx:id="lblActiveMissions" text="---" styleClass="text-lvl-value" style="-fx-text-fill: #4ade80;">
                <effect><Glow level="0.5"/></effect>
            </Label>
        </VBox>
    </HBox>

    <TabPane fx:id="missionTabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="custom-tab-pane">
        
        <Tab text="DIARIAS">
            <ScrollPane fitToWidth="true" styleClass="transparent-scroll" style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="dailyContainer" spacing="15" style="-fx-padding: 20 5;"/>
            </ScrollPane>
        </Tab>

        <Tab text="SEMANALES">
            <ScrollPane fitToWidth="true" styleClass="transparent-scroll" style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="weeklyContainer" spacing="15" style="-fx-padding: 20 5;"/>
            </ScrollPane>
        </Tab>

        <Tab text="HISTORIA DE CLASE">
            <ScrollPane fitToWidth="true" styleClass="transparent-scroll" style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="classContainer" spacing="15" style="-fx-padding: 20 5;"/>
            </ScrollPane>
        </Tab>

    </TabPane>

</VBox>